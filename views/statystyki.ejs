<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Arsenał - Raport Strategiczny</title>
    
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" type="image/png" href="/logo-v2.png">
    <meta name="theme-color" content="#0f172a">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
        :root { --bg-color: #0f172a; --accent: #667eea; --glass: rgba(255,255,255,0.03); --border: rgba(255,255,255,0.1); --text: #fff; }
        body { background: var(--bg-color); color: var(--text); font-family: 'Poppins', sans-serif; margin: 0; display: flex; min-height: 100vh; }
        
        .background-blobs { position: fixed; width: 100%; height: 100%; z-index: -1; }
        .blob { position: absolute; border-radius: 50%; filter: blur(90px); opacity: 0.3; }
        .b1 { top: -10%; left: -10%; width: 600px; height: 600px; background: #764ba2; } 
        .b2 { bottom: -10%; right: -10%; width: 600px; height: 600px; background: #667eea; }

        .sidebar { width: 280px; background: rgba(15,23,42,0.8); backdrop-filter: blur(20px); border-right: 1px solid var(--border); padding: 40px 30px; display: flex; flex-direction: column; position: sticky; top: 0; height: 100vh; }
        .nav-item { padding: 14px 20px; margin-bottom: 8px; border-radius: 14px; color: #94a3b8; display: flex; align-items: center; gap: 15px; text-decoration: none; transition: 0.3s; }
        .nav-item:hover, .nav-item.active { background: rgba(255,255,255,0.05); color: #fff; }
        .logo { font-size: 1.5rem; font-weight: 800; margin-bottom: 60px; color: #fff; display:flex; align-items:center; gap:10px; }

        .main { flex: 1; padding: 50px; width: 100%; overflow-y: auto; }

        /* KPI CARDS */
        .kpi-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-bottom: 40px; }
        .kpi-card { background: var(--glass); border: 1px solid var(--border); padding: 25px; border-radius: 20px; position: relative; overflow: hidden; }
        .kpi-card h3 { margin: 0 0 10px 0; font-size: 0.9rem; color: #94a3b8; text-transform: uppercase; letter-spacing: 1px; }
        .kpi-value { font-size: 2rem; font-weight: 700; color: #fff; }
        .kpi-icon { position: absolute; right: 20px; top: 20px; font-size: 2.5rem; opacity: 0.1; }
        
        .kpi-danger .kpi-value { color: #ef4444; }
        .kpi-success .kpi-value { color: #10b981; }
        .kpi-money .kpi-value { color: #f59e0b; }

        /* CHARTS */
        .charts-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 30px; }
        .chart-container { background: var(--glass); border: 1px solid var(--border); padding: 30px; border-radius: 24px; }
        
        @media (max-width: 1000px) { .charts-grid { grid-template-columns: 1fr; } }
        @media (max-width: 768px) { .sidebar { display: none; } .main { padding: 20px; } }
    </style>
</head>
<body>
    <div class="background-blobs"><div class="blob b1"></div><div class="blob b2"></div></div>

    <nav class="sidebar">
        <div class="logo"><i class="fa-solid fa-shield-halved"></i> SYSTEM ARSENAŁ</div>
        <a href="/" class="nav-item"><i class="fa-solid fa-layer-group"></i> Magazyn</a>
        <a href="/statystyki" class="nav-item active"><i class="fa-solid fa-chart-pie"></i> Raporty</a>
        <a href="/zamowienia" class="nav-item"><i class="fa-solid fa-truck-fast"></i> Zamówienia</a>
        <% if(typeof user !== 'undefined' && user.rola === 'Administrator') { %>
            <a href="/uzytkownicy" class="nav-item"><i class="fa-solid fa-users"></i> Użytkownicy</a>
        <% } %>

        <a href="/historia" class="nav-item"><i class="fa-solid fa-list"></i> Logi</a>
        
        <div style="margin-top:auto">
            <div style="padding: 10px; font-size: 0.8rem; color: #64748b;">
                Zalogowany: <span style="color:#fff"><%= user.login %></span>
            </div>
            <form action="/logout" method="POST"><button style="background:none; border:none; color:#ff4757; cursor:pointer;">Wyloguj</button></form>
        </div>
    </nav>

    <main class="main">
        <h1 style="margin-bottom: 30px;"><i class="fa-solid fa-chart-line"></i> Raport Sytuacyjny (SITREP)</h1>

        <div class="kpi-grid">
            <div class="kpi-card kpi-money">
                <h3>Wartość Arsenału</h3>
                <div class="kpi-value"><%= stats.wartosc %> PLN</div>
                <i class="fa-solid fa-sack-dollar kpi-icon"></i>
            </div>
            
            <div class="kpi-card kpi-danger">
                <h3>Krytyczne Braki</h3>
                <div class="kpi-value"><%= stats.alerty %></div>
                <i class="fa-solid fa-triangle-exclamation kpi-icon"></i>
            </div>

            <div class="kpi-card kpi-success">
                <h3>Jednostek Sprzętu</h3>
                <div class="kpi-value"><%= stats.ilosc %></div>
                <i class="fa-solid fa-boxes-stacked kpi-icon"></i>
            </div>
        </div>

        <div class="charts-grid">
            <div class="chart-container">
                <h3 style="margin-top:0">Struktura Zasobów (Kategorie)</h3>
                <canvas id="chartKategorie"></canvas>
            </div>
            
            <div class="chart-container">
                <h3 style="margin-top:0">Najdroższe Zasoby (Top 5)</h3>
                <canvas id="chartWartosc"></canvas>
            </div>
        </div>
    </main>

    <script>
        // DANE Z BACKENDU
        const kategorieData = <%- JSON.stringify(stats.kategorie) %>;
        const arsenalData = <%- JSON.stringify(arsenal) %>;

        // 1. WYKRES KOŁOWY (Kategorie)
        const ctx1 = document.getElementById('chartKategorie').getContext('2d');
        new Chart(ctx1, {
            type: 'doughnut',
            data: {
                labels: Object.keys(kategorieData),
                datasets: [{
                    data: Object.values(kategorieData),
                    backgroundColor: ['#ef4444', '#f59e0b', '#10b981', '#3b82f6', '#8b5cf6'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'right', labels: { color: '#fff' } }
                }
            }
        });

        // 2. WYKRES SŁUPKOWY (Top 5 Najdroższych)
        // Sortujemy arsenał po cenie i bierzemy 5 pierwszych
        const top5 = arsenalData
            .sort((a, b) => (b.cena * b.ilosc) - (a.cena * a.ilosc))
            .slice(0, 5);

        const ctx2 = document.getElementById('chartWartosc').getContext('2d');
        new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: top5.map(item => item.nazwa),
                datasets: [{
                    label: 'Wartość Całkowita (PLN)',
                    data: top5.map(item => item.cena * item.ilosc),
                    backgroundColor: '#667eea',
                    borderRadius: 5
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { ticks: { color: '#94a3b8' }, grid: { color: 'rgba(255,255,255,0.05)' } },
                    x: { ticks: { color: '#fff' }, grid: { display: false } }
                },
                plugins: {
                    legend: { display: false }
                }
            }
        });
    </script>
</body>
</html>