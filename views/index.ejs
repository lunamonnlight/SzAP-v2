<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>System Arsenał - Panel Główny</title>
    
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" type="image/png" href="/logo-v2.png">
    <link rel="apple-touch-icon" href="/logo-v2.png">
    <meta name="theme-color" content="#0f172a">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Special+Elite&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
    
    <style>
        :root { --bg-color: #0f172a; --accent: #667eea; --glass: rgba(255,255,255,0.03); --border: rgba(255,255,255,0.1); --text: #fff; --danger: #ef4444; }
        body { background: var(--bg-color); color: var(--text); font-family: 'Poppins', sans-serif; margin: 0; display: flex; min-height: 100vh; overflow-x: hidden; }
        
        .background-blobs { position: fixed; width: 100%; height: 100%; z-index: -1; }
        .blob { position: absolute; border-radius: 50%; filter: blur(90px); opacity: 0.3; }
        .b1 { top: -10%; left: -10%; width: 600px; height: 600px; background: #764ba2; } 
        .b2 { bottom: -10%; right: -10%; width: 600px; height: 600px; background: #667eea; }

        .sidebar { width: 280px; background: rgba(15,23,42,0.8); backdrop-filter: blur(20px); border-right: 1px solid var(--border); padding: 40px 30px; display: flex; flex-direction: column; position: sticky; top: 0; height: 100vh; z-index: 100; }
        .nav-item { padding: 14px 20px; margin-bottom: 8px; border-radius: 14px; color: #94a3b8; display: flex; align-items: center; gap: 15px; text-decoration: none; transition: 0.3s; }
        .nav-item:hover, .nav-item.active { background: rgba(255,255,255,0.05); color: #fff; }
        .logo { font-size: 1.5rem; font-weight: 800; margin-bottom: 60px; color: #fff; display:flex; align-items:center; gap:10px; }

        .main { flex: 1; padding: 50px; overflow-y: auto; width: 100%; }
        
        .filter-bar { display: flex; gap: 10px; margin-bottom: 30px; flex-wrap: wrap; }
        .filter-btn { background: rgba(255,255,255,0.05); border: 1px solid var(--border); color: #94a3b8; padding: 8px 16px; border-radius: 20px; cursor: pointer; transition: 0.3s; font-size: 0.9rem; }
        .filter-btn:hover, .filter-btn.active { background: var(--accent); color: #fff; border-color: var(--accent); }

        .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 30px; margin-bottom: 60px; }
        .card { background: var(--glass); backdrop-filter: blur(15px); border: 1px solid var(--border); border-radius: 24px; padding: 25px; transition: 0.3s; position: relative; }
        .card:hover { transform: translateY(-5px); border-color: rgba(255,255,255,0.3); }
        .card-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 15px; }
        .img-container { width: 60px; height: 60px; border-radius: 16px; overflow: hidden; background: #000; border: 1px solid rgba(255,255,255,0.2); display: flex; justify-content: center; align-items: center; }
        .card-img { width: 100%; height: 100%; object-fit: cover; }
        
        .cat-badge { position: absolute; top: 15px; left: 50%; transform: translateX(-50%); font-size: 0.7rem; font-weight: bold; padding: 4px 10px; border-radius: 8px; text-transform: uppercase; z-index: 10; white-space: nowrap; }
        .cat-Bron { background: rgba(239, 68, 68, 0.2); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.3); }
        .cat-Amunicja { background: rgba(245, 158, 11, 0.2); color: #f59e0b; border: 1px solid rgba(245, 158, 11, 0.3); }
        .cat-Mundury { background: rgba(16, 185, 129, 0.2); color: #10b981; border: 1px solid rgba(16, 185, 129, 0.3); }
        .cat-Pojazdy { background: rgba(59, 130, 246, 0.2); color: #3b82f6; border: 1px solid rgba(59, 130, 246, 0.3); }
        .cat-Inne { background: rgba(148, 163, 184, 0.2); color: #94a3b8; border: 1px solid rgba(148, 163, 184, 0.3); }

        .controls { display: flex; justify-content: space-between; align-items: center; margin-top: 20px; padding-top: 20px; border-top: 1px solid var(--border); }
        .btn-action { width: 32px; height: 32px; border-radius: 8px; border: none; cursor: pointer; color: #fff; display: flex; align-items: center; justify-content: center; }
        .btn-minus { background: rgba(255,255,255,0.1); }
        .btn-plus { background: var(--accent); }
        .btn-issue { background: var(--danger); width: 100%; margin-top: 10px; padding: 8px; border-radius: 10px; border: none; color: #fff; cursor: pointer; font-weight: 600; display: flex; align-items: center; justify-content: center; gap: 8px; transition: 0.2s; }
        .btn-issue:hover { background: #d32f2f; }

        .add-panel { background: var(--glass); padding: 40px; border-radius: 30px; border: 1px solid var(--border); }
        input, select { background: rgba(0,0,0,0.3); border: 1px solid var(--border); padding: 15px; border-radius: 12px; color: #fff; width: 100%; box-sizing: border-box; margin-bottom: 15px; }
        .btn-submit { background: var(--accent); border: none; color: #fff; padding: 15px 30px; border-radius: 12px; font-weight: bold; cursor: pointer; width: 100%; }

        /* MODALE */
        .modal-overlay { position: fixed; inset: 0; background: rgba(0,0,0,0.85); display: none; justify-content: center; align-items: center; z-index: 999; backdrop-filter: blur(5px); }
        .modal-overlay.active { display: flex; }
        .modal { background: #1e293b; padding: 30px; border-radius: 20px; width: 90%; max-width: 400px; border: 1px solid #333; }
        
        /* SKANER */
        #reader { width: 100%; border-radius: 15px; overflow: hidden; border: 2px solid var(--accent); }
        #reader video { object-fit: cover; border-radius: 15px; }

        @media (max-width: 768px) {
            .sidebar { display: none; }
            .main { padding: 20px; }
            .grid { grid-template-columns: 1fr; }
            .filter-bar { overflow-x: auto; padding-bottom: 10px; flex-wrap: nowrap; }
            .filter-btn { white-space: nowrap; }
        }

        /* DRUKOWANIE */
        @media print {
            @page { margin: 1cm; }
            body { background: #fff !important; color: #000 !important; display: block; font-family: 'Times New Roman', serif; }
            .sidebar, .add-panel, .controls, .filter-bar, .print-hide, .background-blobs { display: none !important; }
            
            body:not(.printing-label) #print-header { display: block !important; margin-bottom: 20px; text-align: center; border-bottom: 2px solid #000; }
            body:not(.printing-label) .grid { display: table; width: 100%; border-collapse: collapse; margin-top: 10px; }
            body:not(.printing-label) .card { display: table-row; border-bottom: 1px solid #000; background: none !important; box-shadow: none !important; page-break-inside: avoid; }
            body:not(.printing-label) .card-header, body:not(.printing-label) h3, body:not(.printing-label) p { display: table-cell; padding: 10px; border-bottom: 1px solid #ccc; vertical-align: middle; }
            body:not(.printing-label) .card-header { width: 50px; }
            body:not(.printing-label) h3 { width: 30%; font-weight: bold; font-size: 12pt; }
            body:not(.printing-label) p { width: 40%; font-size: 10pt; color: #444; }
            body:not(.printing-label) .card::after { content: "Stan: " attr(data-qty) " szt."; display: table-cell; padding: 10px; border-bottom: 1px solid #ccc; text-align: right; font-weight: bold; white-space: nowrap; vertical-align: middle; }
            body:not(.printing-label) .img-container { border: none; width: 40px; height: 40px; }
            body:not(.printing-label) .img-container i { color: #000 !important; }
            body:not(.printing-label) .cat-badge { display: none; }

            body.printing-label #print-header, body.printing-label .main, body.printing-label header, body.printing-label .grid { display: none !important; }
            body.printing-label #qrModal { display: flex !important; position: absolute; left: 0; top: 0; width: 100%; height: 100%; background: white !important; align-items: center; justify-content: center; border: none; z-index: 9999; }
            body.printing-label .modal { border: 4px solid #000; box-shadow: none; width: 300px; height: auto; padding: 20px; background: #fff !important; }
            body.printing-label .modal-actions { display: none !important; }
        }
        .stamp { border: 4px double #cc0000; color: #cc0000; padding: 5px 20px; font-family: 'Special Elite', cursive; font-size: 16pt; transform: rotate(-3deg); display: inline-block; margin-top: 10px; letter-spacing: 2px; font-weight: bold; text-transform: uppercase; }
    </style>
</head>
<body>
    <div class="background-blobs"><div class="blob b1"></div><div class="blob b2"></div></div>

    <div id="print-header" style="display:none;">
        <div style="display:flex; justify-content:space-between; align-items:center;">
            <div style="text-align:left;"><h1 style="margin:0; font-size:18pt; text-transform:uppercase;">Raport Stanu Magazynowego</h1><p style="margin:0; font-size:10pt;">Ministerstwo Obrony • Departament Logistyki</p></div>
            <div class="stamp">ŚCIŚLE TAJNE</div>
        </div>
        <p style="text-align:right; font-size:9pt; margin-top:10px;">Data generowania: <span id="print-date"></span></p>
    </div>

    <div class="modal-overlay" id="editModal">
        <div class="modal">
            <h3 style="color:#fff; margin-top:0">Edytuj Sprzęt</h3>
            <form action="/edytuj" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="id" id="edit-id">
                <label style="color:#aaa; font-size:0.8rem">Nazwa</label><input type="text" name="nazwa" id="edit-nazwa" required>
                <label style="color:#aaa; font-size:0.8rem">Kategoria</label><select name="kategoria" id="edit-kategoria"><option value="Bron">Broń</option><option value="Amunicja">Amunicja</option><option value="Mundury">Mundury</option><option value="Pojazdy">Pojazdy</option><option value="Inne">Inne</option></select>
                <label style="color:#aaa; font-size:0.8rem">Opis</label><input type="text" name="opis" id="edit-opis" required>
                <label style="color:#aaa; font-size:0.8rem">Ilość</label><input type="number" name="ilosc" id="edit-ilosc" required>
                <input type="file" name="zdjecie" accept="image/*">
                <div style="display:flex; gap:10px; justify-content:flex-end; margin-top:15px;">
                    <button type="button" onclick="closeModal('editModal')" style="padding:10px; background:#333; color:#fff; border:none; border-radius:8px;">Anuluj</button>
                    <button type="submit" style="padding:10px; background:#3498db; color:#fff; border:none; border-radius:8px;">Zapisz</button>
                </div>
            </form>
        </div>
    </div>

    <div class="modal-overlay" id="issueModal">
        <div class="modal" style="border: 1px solid #ef4444;">
            <h3 style="color:#fff; margin-top:0"><i class="fa-solid fa-hand-holding-box"></i> Protokół Wydania</h3>
            <p id="issue-item-name" style="color:var(--accent); font-weight:bold; margin-bottom:20px;"></p>
            
            <form action="/wydaj" method="POST">
                <input type="hidden" name="id" id="issue-id">
                
                <label style="color:#aaa; font-size:0.8rem">Ilość do wydania</label>
                <input type="number" name="ilosc" id="issue-ilosc" value="1" min="1" required style="border-color: #ef4444;">
                
                <label style="color:#aaa; font-size:0.8rem">Odbiorca (Kto?)</label>
                <input type="text" name="odbiorca" placeholder="np. Kpr. Jan Kowalski" required>
                
                <label style="color:#aaa; font-size:0.8rem">Cel / Przeznaczenie</label>
                <input type="text" name="cel" placeholder="np. Patrol, Ćwiczenia, Naprawa" required>

                <div style="display:flex; gap:10px; justify-content:flex-end; margin-top:15px;">
                    <button type="button" onclick="closeModal('issueModal')" style="padding:10px; background:#333; color:#fff; border:none; border-radius:8px;">Anuluj</button>
                    <button type="submit" style="padding:10px; background:#ef4444; color:#fff; border:none; border-radius:8px; font-weight:bold;">Zatwierdź Wydanie</button>
                </div>
            </form>
        </div>
    </div>

    <div class="modal-overlay" id="qrModal">
        <div class="modal" style="text-align:center; background: #fff; color: #000;">
            <h3 style="color:#000; margin-top:0; border-bottom: 2px solid #000; padding-bottom: 10px;">ETYKIETA LOGISTYCZNA</h3>
            <div id="qrcode" style="display:flex; justify-content:center; margin: 20px auto;"></div>
            <h2 id="qr-name" style="margin:0; text-transform:uppercase; font-weight:800; font-size: 1.5rem;"></h2>
            <p id="qr-id" style="color:#000; font-family:'Courier New', monospace; margin:5px 0 20px; font-weight:bold;"></p>
            <div class="modal-actions" style="justify-content:center">
                <button type="button" onclick="closeQR()" style="padding:10px 20px; background:#333; color:#fff; border:none; border-radius:8px; cursor:pointer;">Zamknij</button>
                <button type="button" onclick="window.print()" style="padding:10px 20px; background:#000; color:#fff; border:none; border-radius:8px; cursor:pointer; margin-left:10px;"><i class="fa-solid fa-print"></i> Drukuj Etykietę</button>
            </div>
        </div>
    </div>

    <div class="modal-overlay" id="scannerModal">
        <div class="modal" style="text-align:center;">
            <h3 style="color:#fff; margin-top:0"><i class="fa-solid fa-camera"></i> Zeskanuj Kod</h3>
            <div id="reader"></div>
            <p id="scan-status" style="color:#aaa; font-size:0.8rem; margin-top:10px;">Nakieruj kamerę na kod QR...</p>
            <button type="button" onclick="stopScanner()" style="margin-top:20px; padding:10px 20px; background:#ff4757; color:#fff; border:none; border-radius:8px; cursor:pointer;">Anuluj</button>
        </div>
    </div>

    <nav class="sidebar">
        <div class="logo"><i class="fa-solid fa-shield-halved"></i> SYSTEM ARSENAŁ</div>
        <a href="/" class="nav-item active"><i class="fa-solid fa-layer-group"></i> Magazyn</a>
        <a href="/historia" class="nav-item"><i class="fa-solid fa-list"></i> Logi</a>
        <div style="margin-top:auto"><form action="/logout" method="POST"><button style="background:none; border:none; color:#ff4757; cursor:pointer;">Wyloguj</button></form></div>
    </nav>

    <main class="main">
        <header style="display:flex; justify-content:space-between; align-items:center; margin-bottom:30px;">
            <div><h1 style="margin:0; font-size:1.5rem;">Stan Magazynowy</h1><p style="color:#94a3b8; margin:0; font-size:0.9rem">Zarządzanie zasobami</p></div>
            <div class="print-hide" style="display:flex; gap:10px;">
                <button onclick="startScanner()" style="background: var(--accent); color:#fff; border:none; padding:10px 20px; border-radius:15px; cursor:pointer; font-weight:bold;"><i class="fa-solid fa-expand"></i> SKANUJ</button>
                <button onclick="window.print()" style="background:rgba(255,255,255,0.1); border:1px solid rgba(255,255,255,0.2); color:#fff; padding:10px 15px; border-radius:15px; cursor:pointer;"><i class="fa-solid fa-print"></i></button>
            </div>
        </header>

        <div class="filter-bar print-hide">
            <button class="filter-btn active" onclick="filterItems('all', this)">Wszystko</button>
            <button class="filter-btn" onclick="filterItems('Bron', this)">Broń</button>
            <button class="filter-btn" onclick="filterItems('Amunicja', this)">Amunicja</button>
            <button class="filter-btn" onclick="filterItems('Mundury', this)">Mundury</button>
            <button class="filter-btn" onclick="filterItems('Pojazdy', this)">Pojazdy</button>
            <button class="filter-btn" onclick="filterItems('Inne', this)">Inne</button>
        </div>

        <div class="grid">
            <% arsenal.forEach(item => { let kat = item.kategoria || 'Inne'; %>
                <div class="card item-card" id="card-<%= item.id %>" data-category="<%= kat %>" data-qty="<%= item.ilosc %>">
                    <div class="cat-badge cat-<%= kat %>"><%= kat %></div>
                    <div class="card-header">
                        <div class="img-container">
                            <% if(item.obrazek) { %> <img src="<%= item.obrazek %>" class="card-img" alt="foto"> <% } else { %> <i class="fa-solid fa-box-open" style="color:#fff; font-size:1.5rem"></i> <% } %>
                        </div>
                        <div class="print-hide">
                            <button onclick="openEdit('<%= item.id %>', '<%= item.nazwa %>', '<%= item.opis %>', '<%= item.ilosc %>', '<%= kat %>')" style="background:none; border:none; color:#aaa; cursor:pointer;"><i class="fa-solid fa-pen"></i></button>
                            <form action="/usun/<%= item.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Usunąć?');"><button type="submit" style="background:none; border:none; color:#aaa; cursor:pointer;"><i class="fa-solid fa-trash"></i></button></form>
                            <button onclick="showQR('<%= item.id %>', '<%= item.nazwa %>')" style="background:none; border:none; color:#aaa; cursor:pointer; margin-left:5px;" title="Generuj QR"><i class="fa-solid fa-qrcode"></i></button>
                        </div>
                    </div>
                    <h3 style="margin: 10px 0 5px;"><%= item.nazwa %></h3>
                    <p style="font-size:0.85rem; color:#94a3b8; margin-bottom:15px;"><%= item.opis %></p>
                    <div class="controls print-hide" style="flex-wrap:wrap;">
                        <div style="display:flex; justify-content:space-between; width:100%; align-items:center;">
                            <form action="/zmien/<%= item.id %>/minus" method="POST" style="margin:0"><button class="btn-action btn-minus">-</button></form>
                            <span style="font-weight:bold; font-size:1.2rem;"><%= item.ilosc %></span>
                            <form action="/zmien/<%= item.id %>/plus" method="POST" style="margin:0"><button class="btn-action btn-plus">+</button></form>
                        </div>
                        <button onclick="openIssue('<%= item.id %>', '<%= item.nazwa %>', '<%= item.ilosc %>')" class="btn-issue">
                            <i class="fa-solid fa-hand-holding"></i> WYDAJ SPRZĘT
                        </button>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="add-panel print-hide">
            <h3><i class="fa-solid fa-plus-circle"></i> Przyjmij na stan</h3>
            <form action="/dodaj" method="POST" enctype="multipart/form-data">
                <div style="display:grid; grid-template-columns: 1fr 1fr; gap:15px; margin-bottom:15px;">
                    <input type="text" name="nazwa" placeholder="Nazwa" required style="margin:0">
                    <select name="kategoria" style="margin:0"><option value="Inne">Wybierz kategorię...</option><option value="Bron">Broń</option><option value="Amunicja">Amunicja</option><option value="Mundury">Mundury</option><option value="Pojazdy">Pojazdy</option></select>
                </div>
                <div style="display:grid; grid-template-columns: 1fr 100px; gap:15px; margin-bottom:15px;">
                    <input type="text" name="opis" placeholder="Opis" required style="margin:0">
                    <input type="number" name="ilosc" placeholder="Ilość" required style="margin:0">
                </div>
                <input type="file" name="zdjecie" accept="image/*">
                <button type="submit" class="btn-submit" style="margin-top:15px;">Zaksięguj</button>
            </form>
        </div>
    </main>

    <script>
        function closeModal(id) { document.getElementById(id).classList.remove('active'); }
        function openEdit(id, nazwa, opis, ilosc, kategoria) {
            document.getElementById('edit-id').value = id;
            document.getElementById('edit-nazwa').value = nazwa;
            document.getElementById('edit-opis').value = opis;
            document.getElementById('edit-ilosc').value = ilosc;
            document.getElementById('edit-kategoria').value = kategoria;
            document.getElementById('editModal').classList.add('active');
        }
        
        // --- LOGIKA WYDAWANIA ---
        function openIssue(id, nazwa, maxIlosc) {
            document.getElementById('issue-id').value = id;
            document.getElementById('issue-item-name').innerText = "Wydajesz: " + nazwa;
            // Zabezpieczenie: nie można wydać więcej niż mamy
            const input = document.getElementById('issue-ilosc');
            input.max = maxIlosc;
            input.value = 1; 
            document.getElementById('issueModal').classList.add('active');
        }

        function filterItems(category, btn) {
            if(btn) { document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active')); btn.classList.add('active'); }
            document.querySelectorAll('.item-card').forEach(card => {
                if (category === 'all' || card.getAttribute('data-category') === category) card.style.display = 'block';
                else card.style.display = 'none';
            });
        }
        
        document.getElementById('print-date').innerText = new Date().toLocaleString();
        function showQR(id, nazwa) {
            const container = document.getElementById('qrcode');
            container.innerHTML = "";
            document.getElementById('qr-name').innerText = nazwa;
            document.getElementById('qr-id').innerText = "S/N: " + id;
            new QRCode(container, { text: `SPRZET: ${nazwa} | SN: ${id}`, width: 180, height: 180 });
            document.getElementById('qrModal').classList.add('active');
            document.body.classList.add('printing-label');
        }
        function closeQR() {
            document.getElementById('qrModal').classList.remove('active');
            document.body.classList.remove('printing-label');
        }
        window.onclick = function(e) {
            if(e.target.classList.contains('modal-overlay')) {
                e.target.classList.remove('active');
                document.body.classList.remove('printing-label');
                if(html5QrcodeScanner) stopScanner();
            }
        }

        let html5QrcodeScanner;
        function startScanner() {
            document.getElementById('scannerModal').classList.add('active');
            html5QrcodeScanner = new Html5QrcodeScanner("reader", { fps: 10, qrbox: 250 });
            html5QrcodeScanner.render((decodedText, decodedResult) => {
                stopScanner();
                if (decodedText.includes("SN:")) {
                    const id = decodedText.split("SN:")[1].trim();
                    const karta = document.getElementById('card-' + id);
                    if (karta) {
                        filterItems('all', null);
                        document.querySelectorAll('.item-card').forEach(c => c.style.display = 'none');
                        karta.style.display = 'block';
                        karta.style.border = "2px solid #ef4444";
                        karta.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    } else { alert("Nie znaleziono: " + id); }
                } else { alert("To nie jest kod systemu Arsenał!"); }
            });
        }
        function stopScanner() {
            if (html5QrcodeScanner) { html5QrcodeScanner.clear().then(() => { document.getElementById('scannerModal').classList.remove('active'); }); } 
            else { document.getElementById('scannerModal').classList.remove('active'); }
        }
    </script>
</body>
</html>